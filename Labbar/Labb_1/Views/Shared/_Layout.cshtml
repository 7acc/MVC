@using System.Web.UI.WebControls
@using Labb_1.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
    <link href="~/Scripts/jquery.bxslider.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.bxslider.js"></script>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <link href="~/Scripts/Spinner.css" rel="stylesheet" />
    @RenderSection("css", false)
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (@User.Identity.IsAuthenticated)
                {
                    <h2>@User.Identity.Name</h2>
                    @Html.ActionLink("Logout", "Logout", "Account", new { url = Request.Url.AbsoluteUri }, new { @class = "navbar-brand" })
                    @Html.ActionLink("My Profile", "UserProfile", "Profile", null, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Login", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                }
                @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Gallery", "Index", "Gallery", new { area = "" }, new { @class = "navbar-brand" })

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav"></ul>
            </div>
        </div>
    </div>

    <div class="container-full">
        <div class="row" style="margin-bottom: 100px;">
            <div class="container-full">
                <div class="col-md-2"></div>
                <div class="col-md-8">@RenderBody()</div>
                <div class="col-md-2">@RenderSection("featured", required: false)</div>
            </div>
        </div>

        <hr />
        <footer style="position:fixed;
                left:0px;
                bottom:0px;
                height:50px;
                width:100%;
                background:#000000;
                color: white;
                font-family: monospace;              
                ">
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.js"></script>

    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>



</body>
</html>