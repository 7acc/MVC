@model IList<Labb_1.Models.Photo>

@{
    ViewBag.Title = "Gallery";


}


<h2>My Gallery</h2>
<div class="container-fluid">
    <div style="margin-bottom: 40px">
        @Html.ActionLink("Upload", "UpLoad", "Gallery", new { @class = "navbar-brand" })
    </div>
    <br/>
    <br/>   
    <div style="margin-top: 40px;">
        @foreach (var photo in Model)
            {
            <a href='@Url.Action("ShowImage", "Gallery",  new { id = photo.PhotoID }, null)'>
                <img src="@Url.Content(photo.Url)" alt="Image From Folder" style="max-width: 100%; max-height:300px" />
            </a>
        }
    </div>
  
        @section featured
{
            @{
                <div style="margin-top:20px">
                    <h1>Recent uploads</h1>
                    @{
                        Html.RenderAction("RecentUploads");
                    }
                </div>
            }


           
        }
   
</div>

